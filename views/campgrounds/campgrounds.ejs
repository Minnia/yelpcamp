<%include ../partials/header%>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1 class="center">
        Welcome to YelpCamp
      </h1>
      <p class="center">
        View our hand-picked campgrounds from all over the world
      </p>
      <p class="center">
        <a class="btn btn-primary btn-lg" href="/campgrounds/new"
          >Create new campground</a
        >
      </p>
      <form action="/campgrounds" method="GET" class="search-form">
        <div class="form-group ">
          <input
            class="form-control"
            type="text"
            name="search"
            placeholder="Search campgrounds"
          />
          <button class="btn btn-sm btn-info" type="submit">Search</button>
        </div>
      </form>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>
        Our most popular campgrounds
      </h3>
    </div>
    <%campgrounds.forEach(function(campground){%>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="thumbnail">
        <img class="center" src="<%=campground.image %>" />
      </div>
      <div class="caption">
        <h4>
          <%=campground.name%>
        </h4>
      </div>
      <p>
        <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary"
          >More info</a
        >
      </p>
    </div>
    <%});%>
  </div>
</div>
<%include ../partials/footer%>
